.pt_people {
  display: flex;
  font-size: 12px;
  color: #666;
  justify-content: space-between;
  align-items: center;
  height: 150rpx;
}

.groupingBox {
  padding: 0 22rpx;
}

.groupingLine {
  width: 100%;
  height: 1px;
  background-color: #e6e6e6;
}

.pt_people_info {
  display: flex;
  align-items: center;
}

.pt_header image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 46rpx;
  overflow: hidden;
}

.pt_name {
  font-size: 14px;
  color: #333;
  margin-left: 4rpx;
}

.sy_time {
  font-size: 11px;
  color: #999;
}

.groupingRight {
  display: flex;
  align-items: center;
  text-align: center;
}

.short {
  width: 210rpx;
  padding-left: 10rpx;
  border-top-left-radius: 45rpx;
  border-bottom-left-radius: 45rpx;
  height: 90rpx;
  border: 1rpx solid #e6e6e6;
}

.shortNum {
  color: #333;
  margin-top: 12rpx;
}

.peopleNum {
  color: #ff5722;
}

.go_pt {
  width: 122rpx;
  height: 90rpx;
  background: rgba(255, 87, 34, 1);
  color: #fff;
  font-size: 14px;
  text-align: center;
  line-height: 90rpx;
  padding-right: 10rpx;
  border-top-right-radius: 45rpx;
  border-bottom-right-radius: 45rpx;
}
