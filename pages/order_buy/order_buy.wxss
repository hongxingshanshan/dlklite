/* -----------------  导入需要使用的模板样式  -------------------- */
@import '/templates/tip_verify/tip_verify.wxss';

/* ----------------  常用样式  --------------------- */
.flexCenter {
  display: flex;
  align-items: center;
}
.borderTop {
  border-top: 1px solid #B2B2B2;
}
.borderTop1 {
  border-top: 1px solid #F6F6F6;
}
.bg {
  height: 16rpx;
  background-color: #F6F6F6;
}

/* ------------------  页面样式 ----------------------- */

/*------------- 1.0  商户信息 ------------*/
.verify_merchant {
  height: 104rpx;
  font-size: 16px;
  color: #333;
}
.merchant_header {
  margin-left: 32rpx;
  margin-right: 12rpx;
}
.merchant_header image {
  width: 60rpx;
  height: 60rpx;
}

/*-------------- 2.0  产品信息 --------------*/



/* -----------  3.0 购买信息  -------------- */
.verify_buy {
  height: 412rpx;
  padding: 16rpx 32rpx 16rpx 30rpx;
  font-size: 14px;
  line-height: 62rpx;
  color: #666;
}
.verify_buy view {
  display: flex;
  justify-content: space-between;
}
.verify_buy .course_validity text {
  display: block;
  text-align: right;
}

/* ------------  4.0  店铺优惠 --------------- */
.verify_discounts {
  height: 224rpx;
  font-size: 14px;
  padding: 0 30rpx;
}
.verify_discounts view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 112rpx;
}
.color_3 {
  color: #333;
}

/* ---------------5.0  确认使用优惠以及价格  ----------------- */
.verify_price {
   /* height: 200rpx; */
   font-size: 14px;
   color: #333;
   padding: 20rpx 32rpx 20rpx 28rpx;
}
.verify_price view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 56rpx;
}
.font2 {
  font-size: 14px;
  color: #FF5722;
}
/* ---------------6.0  提示购买时间  ----------------- */

.verify_warn {
  height: 84rpx;
  background-color: #FFEEE8;
  color: #FF5722;
  font-size: 14px;
  justify-content: center;
}
/* ---------------7.0  微信支付方式  ----------------- */
.wx_pay {
  margin-bottom: 192rpx;
}
.verify_pay {
   height: 112rpx;
   padding:0 30rpx 0 36rpx;
   justify-content: space-between;
   
   border-bottom: 1px solid  #E6E6E6;
   font-size: 14px;
   color: #333;
}
.verify_pay .yuan image  {
  width: 46rpx;
  height: 46rpx;
}
.verify_pay image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 16rpx;
  }

  /* ---------------8.0  立即支付  ----------------- */
.verify_buys {
  height: 112rpx;
  font-size: 15px;
  display: flex;
}
.verify_buys .buy_prices {
  flex: 1;
  text-align: center;
  justify-content: center;
  height: 100%;
}
.verify_buys .buy_btn {
  width: 320rpx;
  justify-content: center;
  background-color: #FF5722;
  height: 100%;
}
.color_f {
  color: #fff;
}
.redcolor {
  color: #FF5722;
  font-size: 14px;
}
.size18 {
  font-size: 18px;
  color: #FF5722;
}
