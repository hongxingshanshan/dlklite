/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
}   

/*左侧栏主盒子*/  
.nav_left{  
  width: 220rpx;  
  height: 100%;  
  /* 主盒子设置背景色为灰色   */
  background: #F2F2F2;  
  text-align: center;  
  position: absolute;
  left: 0;
  top: 0;
  color: #999999;
  font-size: 14px;
}   
/*左侧栏list的item*/  
 .nav_left .nav_left_items{
  /*每个高30px*/  
  height: 100rpx;  
  /*垂直居中*/  
  line-height: 100rpx;  
  /*只设下边线*/  
  border-bottom: 1px solid #fff;  
 }  
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_items.active{  
  /*背景色变成白色*/  
  background: #fff;  
  border-left: 3px solid #FF5722;
  color: #333;
 } 
  
/*----------------  右侧栏主盒子  ---------------------*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;
  top: 0;  
  right: 0;  
  flex: 1;  
  /*宽度75%，高度占满，并使用百分比布局*/  
  width: 68%;  
  height: 100%;  
  padding: 10px;  
  box-sizing: border-box;  
  background: #fff;  
  font-size: 12px;
  color: #333333;
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{ 
  /*浮动向左*/  
   float: left;   
  /*每个item设置宽度是33.33%*/  
  width: 33.33%;  
  height: 210rpx;  
  text-align: center;  
}  
.nav_right .nav_right_items image{  
  /*被图片设置宽高*/  
  width: 106rpx;  
  height: 122rpx;  
}  
.nav_right .nav_right_items text{  
  /*给text设成块级元素*/  
   display: block;  
  margin-top: 5px;  
  font-size: 10px;   
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 

/* -------------------  全部分类按钮  ------------------- */
.all_types_btn {
  width: 100%;
  height: 100rpx;
  background-color: #FF5722;
  font-size: 18px;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}