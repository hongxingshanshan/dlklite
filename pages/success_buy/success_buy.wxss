/* -----------------  导入需要使用的模板样式  -------------------- */
@import '/templates/tip_onselfBuy_header/tip_onselfBuy_header.wxss';
@import '/templates/tip_verify/tip_verify.wxss';
@import '/templates/tip_orderNum/tip_orderNum.wxss';

page {
  background-color: #f6f6f6;
  line-height: 20px;
}

.themeColor {
  color: #ff5722;
}

.size18 {
  font-size: 18px;
  line-height: 25px;
  /* font-weight: 600; */
}

/* 页面样式 */

/* ----------------------2.0 生成二维码------------------------------ */

.createQR {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #999;
  font-size: 14px;
  line-height: 20px;
  text-align: center;
  padding: 52rpx 0;
}

.hint {
  opacity: 0.9;
}

.QRcode image {
  width: 360rpx;
  height: 360rpx;
}

/* -------------------------3.0  商户信息----------------------- */

.merchant_info {
  margin-top: 16rpx;
  height: 156rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 48rpx 0 34rpx;
}

.info_gg {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  position: relative;
}

.merchant_info .merchant_logo image {
  width: 44rpx;
  height: 54rpx;
}

.merchant_info .merchant_infos {
  margin-left: 20rpx;
  width: 550rpx;
}

.merchant_info .merchant_infos .merchant_title {
  font-size: 14px;
  line-height: 28px;
  color: #333;
  display: flex;
  align-items: center;
}

.merchant_info .merchant_title image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 4rpx;
}

.merchant_info .right_arrows {
  width: 20rpx;
  height: 40rpx;
}

.merchant_info .right_arrows image {
  width: 20rpx;
  height: 40rpx;
}

.merchant_ address {
  width: 100%;
  height: 12px;
}

#location {
  display: flex;
  align-items: center;
}

.distance {
  margin-left: 16rpx;
  width: 118rpx;
  height: 36rpx;
  background-color: #26bf94;
  border-radius: 9rpx;
  color: #fff;
  font-size: 10px;
  text-align: center;
  line-height: 36rpx;
}

.distanceStr {
  opacity: 0.8;
}

/* -------------------  4.0  产品信息  ----------------------- */

.projectInfo {
  margin-top: 16rpx;
}

.verify_product {
  background-color: #fff;
}

/* -------------------  5.0  实付金额  ------------------------ */

.realityPay {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #666;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e6e6e6;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.stayPay {
  display: flex;
}

.stayPay .cancelOrder {
  margin-right: 32rpx;
}

.refundBtn, .cancelOrder {
  width: 180rpx;
  height: 72rpx;
  border: 1rpx solid #b3b3b3;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buyAgain, .pay {
  background-color: #ff5722;
  width: 180rpx;
  height: 72rpx;
  border-radius: 12rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.warn {
  padding: 0 0 20rpx 17px;
  display: flex;
  align-items: center;
  line-height: 17px;
  color: #666;
  font-size: 12px;
}

.activity {
  color: #333;
  font-weight: 600;
}

/* -----------------  7.0  联系方式  ------------------- */

.contactWay {
  display: flex;
  background-color: #fff;
  font-size: 14px;
  line-height: 20px;
  color: #666;
  height: 114rpx;
  align-items: center;
}

.Contact_merchant, .official_service {
  flex: 1;
  display: flex;
  justify-content: center;
}

.Contact_merchant image, .official_service image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 18rpx;
}

.y_line {
  width: 2rpx;
  height: 64rpx;
  background-color: #e6e6e6;
}
