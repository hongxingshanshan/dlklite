/* -----------------  导入需要使用的模板样式  -------------------- */
@import '/templates/tip_verify/tip_verify.wxss';



/* -----------------------  常用样式  ----------------------- */
.flexCenter {
  display: flex;
  align-items: center;
  text-align: center;
}
.bg {
  height: 16rpx;
  background-color: #F6F6F6;
}
.color_6 {
  color: #666;
}
.fontsize18 {
  font-size: 18px;
}

/* 页面样式 */
/* ------------------- 1.0  订单状态分类  ---------------------- */
page{
    width: 100%;
    height: 100%;
}
.order_categorys{
height: 76rpx;
}
.container_page{
    width: 100%;
    height: 76rpx;
    background-color: #fff;
}
.nav {
    height: 76rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 76rpx;
    font-size: 14px;
    color: #333;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    border-top: 1px solid #E6E6E6;
    background-color: #fff;
}
.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
}
.active {
   border-bottom: 2px solid #FF5722;
    line-height: 64rpx;
    display: inline-block;
    font-weight: 600;
}

/* ------------------- 2.0  订单列表  ---------------------- */
.tab-box{
    height: 100%;
    box-sizing: border-box;
    border-top: 16rpx solid F6F6F6;
} 

.tab-content{
    overflow-y: scroll;
}
.xd_time {
  height: 80rpx;
  justify-content: space-between;
  padding: 0 28rpx 0 32rpx; 
  font-size: 14px;
  color: #333;
}
.color_y {
  color: #FF5722;
}
.pt_info {
  height: 80rpx;
  padding: 0 28rpx 0 30rpx;
  justify-content: space-between;
  border-bottom: 1px solid #E6E6E6;
}
.pt_info .pt_info_img image{
  width: 280rpx;
  height: 56rpx;
}
.pt_price {
  font-size: 14px;
  color: #FF5722;
}
.pt_people_num {
  font-size: 14px;
  color: #999;
  margin-right: 28rpx;
}
.pt_btns {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 14px;
}
.pt_btns view {
  width: 220rpx;
  height: 72rpx;
  border: 1px solid #B3B3B3;
  border-radius: 10rpx;
  text-align: center;
  line-height: 72rpx;
  margin-right: 32rpx;
}

view.red_btn {
  background-color: #FF5722;
  color: #fff;
  border: none;
}