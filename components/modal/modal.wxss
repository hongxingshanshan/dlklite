/* 弹窗 组件 样式 */
.mask{
 position: fixed;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 display: flex;
 justify-content: center;
 align-items: center;
 background-color: rgba(0,0,0,0.4);
 z-index: 8888;
}

.modal-content{
position: fixed;
top: 50%;
transform: translate(-50%,-50%);
left: 50%;
 display: flex;
 flex-direction: column;
 width: 90%;
 /* height: 80%; */
 background-color: #fff;
 border-radius: 20rpx;
 z-index: 9999;
}

.modal-btn-wrapper{
 display: flex;
 flex-direction: row;
 height: 84rpx;
 line-height: 84rpx;
 border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
 flex: 1;
 height: 84rpx;
 line-height: 84rpx;
 text-align: center;
 font-size: 32rpx;
}
.modal-btn-wrapper>.cancel-btn{
  color: #333333;
}
.modal-btn-wrapper>.confirm-btn {
  color: #FF5722;
}

.cancel-btn{
 border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
 flex: 1;
 height: 100%;
 overflow-y: hidden; 
}