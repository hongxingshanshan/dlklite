.mask{
 position: fixed;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 background-color: rgba(0,0,0,0.4);
 z-index: 8888;
}

.modal-content{
 display: flex;
 flex-direction: column;
 width: 750rpx;
 background-color: #fff;
 border-radius: 10rpx;
 position: fixed;
 bottom: 0;
 z-index: 9999;
}

.main-content{
 flex: 1;
 height: 100%;
